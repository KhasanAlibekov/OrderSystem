@model IEnumerable<Ordersystem.DataObjects.Message>

@{
    ViewData["Title"] = "Index";
}

<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-black py-2">Message Board</h2>
        </div>
    </div>
</div>


<div class="container text">
    <div class="row">
        <div class="col">
            <div class="card-columns">
                <div class="card">
                    <h5 class="card-title text-bg-danger text-center">Important Announcement</h5>
                    <div class="col">
                        <div class="card-body p-4">

                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            Posted
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var message in Model.Where(m => m.Type == Ordersystem.DataObjects.MessageType.ImportantAnnouncement))
                                    {
                                        <tr>
                                            <td>
                                                @message.Title
                                            </td>
                                            <td>
                                                @message.Date
                                            </td>
                                            <td class="text-center">
                                                <div class="w-75 btn-group" role="group">

                                                    <a asp-controller="Message" asp-action="Details" asp-route-id="                                       @message.Title" class="btn btn-outline-danger mx-2">
                                                        <i class="bi border-info"></i> More
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card-columns">

                <div class="card">
                    <h5 class="card-title text-bg-info text-center">Status Messages</h5>
                    <div class="col">

                        <div class="card-body p-4">

                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            Posted
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var message in Model.Where(m => m.Type == Ordersystem.DataObjects.MessageType.StatusMessage))
                                    {
                                        <tr>
                                            <td>
                                                @message.Title
                                            </td>
                                            <td>
                                                @message.Date
                                            </td>
                                            <td class="text-center">
                                                <div class="w-75 btn-group" role="group">

                                                    <a asp-controller="Message" asp-action="Index1" asp-route-id="                                       @message.MessageID" class="btn btn-info mx-2">
                                                        <i class="bi border-info"></i> More
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


<br />


