@model Ordersystem.DataObjects.Message

@{
    // Remove HTML tags from the content
    var plainTextContent = System.Text.RegularExpressions.Regex.Replace(Model.Content, "<.*?>", string.Empty);
}

<div class="card border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black py-2">Delete Message</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="MessageID" hidden />
            <div class="border p-3 mt-4">

                <div class="py-2 col-12">
                    <label asp-for="Title" class="ms-2"></label>
                    <input asp-for="Title" disabled class="form-control border-0" />

                </div>
                <div class="py-2 col-12">
                    <label asp-for="Content" class="ms-2"></label>
                    <textarea asp-for="@plainTextContent" disabled class="form-control border-0"></textarea>
                </div>
                <div class="py-2 col-12">
                    <label asp-for="Date" class="ms-2"></label>
                    <input asp-for="Date" disabled class="form-control border-0" value="@Model.Date.ToString("yyyy-MM-dd HH:mm:ss")"/>

                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Message" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back to the list
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

