@model Ordersystem.DataObjects.OrderDetail

<div class="card border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black py-2">@(Model.OrderDetailID != 0 ? "Update" : "Create") Order Detail</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        @* add enctype="multipart/form-data" for file upload *@
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="@Model.ProductID" hidden />
            <input asp-for="@Model.OrderDetailID" hidden />
            <input asp-for="@Model.OrderID" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @* <div asp-validation-summary="All"></div>*@
                        <div class="py-2 col-12">
                            <label asp-for="UnitPrice" class="ms-2"></label>
                            <input asp-for="UnitPrice" class="form-control" type="text" placeholder="Title input" />

                            <span asp-validation-for="UnitPrice" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Quantity" class="form-control border-0" />
                            <label asp-for="Quantity" class="ms-2"></label>

                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <select asp-for="ProductID" asp-items="ViewBag.ProductList" class="form-select border-0">
                                <option disabled selected>---Select Order Details---</option>
                            </select>
                            <label asp-for="Product" class="ms-2"></label>

                            <span asp-validation-for="ProductID" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <select asp-for="OrderID" asp-items="ViewBag.OrderList" class="form-select border-0">
                                <option disabled selected>---Select Supplier---</option>
                            </select>
                            <label asp-for="Order" class="ms-2"></label>

                            <span asp-validation-for="OrderID" class="text-danger"></span>
                        </div>


                        <div class="row pt-2">
                            <div class="col-6 col-md-3">

                                @if (Model.OrderDetailID != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create </button>
                                }

                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="OrderDetail" asp-action="Index" class="btn btn-outline-primary border form-control">
                                    Back to the list
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
