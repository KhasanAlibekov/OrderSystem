@model IEnumerable<Ordersystem.DataObjects.Supplier>

@{
    ViewData["Title"] = "Index";
}

<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-black py-2">Supplier List</h2>
        </div>
    </div>
</div>
<div class="card-body p-4">
    <div class="row pb-3">
        <div class="col-6">
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Supplier" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create New Supplier
            </a>
        </div>
    </div>
    <table class="table table-responsive table-bordered table-striped table-sm">
        <thead>
            <tr>
                <th>
                    Supplier Name
                </th>
                <th>
                    VAT Number
                </th>
                <th>
                    Street Address
                </th>
                <th>
                    City
                </th>
                <th>
                    Postal code
                </th>
                <th>
                    Country
                </th>
                <th>
                    Telephone number
                </th>
                <th>
                    E-mail
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.SupplierName))
            {
                <tr>
                    <td>
                        @obj.SupplierName
                    </td>
                    <td>
                        @obj.VATNumber
                    </td>
                    <td>
                        @obj.Address
                    </td>
                    <td>
                        @obj.City
                    </td>
                    <td>
                        @obj.PostalCode
                    </td>
                    <td>
                        @obj.Country
                    </td>
                    <td>
                        @obj.Phone
                    </td>
                    <td>
                        @obj.Email
                    </td>

                    <td>
                        
                        <a asp-controller="Supplier" asp-action="Edit" asp-route-id="@obj.SupplierID" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        @* <div style="margin-bottom: 10px;"></div> *@

                    </td>
                    <td>
                        <a asp-controller="Supplier" asp-action="Delete" asp-route-id="@obj.SupplierID" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>