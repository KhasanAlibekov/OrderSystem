@model Ordersystem.DataObjects.Supplier

<div class="card border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black py-2">@(Model.SupplierID !=0? "Update" : "Create") Supplier</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="@Model.SupplierID" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        <div class="py-2 col-12">
                            <label asp-for="SupplierName" class="ms-2"></label>
                            <input asp-for="SupplierName" class="form-control" type="text"/>

                            <span asp-validation-for="SupplierName" class="text-danger"></span>
                        </div>
                        
                        <div class="py-2 col-12">
                            <label asp-for="VATNumber" class="ms-2"></label>
                            <input asp-for="VATNumber" class="form-control border-0" />

                            <span asp-validation-for="VATNumber" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12">
                            <label asp-for="Address" class="ms-2"></label>
                            <input asp-for="Address" class="form-control border-0" />

                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="py-2 col-12">
                            <label asp-for="City" class="ms-2"></label>
                            <input asp-for="City" class="form-control border-0" />

                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12">
                            <label asp-for="PostalCode" class="ms-2"></label>
                            <input asp-for="PostalCode" class="form-control border-0" />

                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12">
                            <label asp-for="Phone" class="ms-2"></label>
                            <input asp-for="Phone" class="form-control border-0" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12">
                            <label asp-for="Email" class="ms-2"></label>
                            <input asp-for="Email" class="form-control border-0" />

                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">

                                @if (Model.SupplierID != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create </button>
                                }

                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Supplier" asp-action="Index" class="btn btn-outline-primary border form-control">
                                    Back to the list
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
