@model Ordersystem.DataObjects.Product

@{
    // Remove HTML tags from the content
    var plainTextDescription = System.Text.RegularExpressions.Regex.Replace(Model.Description, "<.*?>", string.Empty);
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="ProductID" hidden />
            <div class="border p-3 mt-4">

                <div class="py-2 col-12">
                    <label asp-for="Title" class="ms-2"></label>
                    <input asp-for="Title" disabled class="form-control border-0" />
                </div>
                <div class="py-2 col-12">
                    <label asp-for="Description" class="ms-2"></label>
                    <textarea asp-for="@plainTextDescription" disabled class="form-control border-0"></textarea>
                </div>
                <div class="py-2 col-12">
                    <label asp-for="Price" class="ms-2"></label>
                    <input asp-for="Price" disabled class="form-control border-0" />
                </div>
                <div class="py-2 col-12">
                    <label asp-for="UnitInStock" class="ms-2"></label>
                    <input asp-for="UnitInStock" disabled class="form-control border-0" />
                </div>
                <div class="py-2 col-12">
                    <label asp-for="ImageUrl" class="ms-2"></label>
                    <input asp-for="ImageUrl" disabled class="form-control border-0" />
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back to the list
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

