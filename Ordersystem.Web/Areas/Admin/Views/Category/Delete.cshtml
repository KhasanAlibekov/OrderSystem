@model Ordersystem.DataObjects.Category

<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-black py-2">Delete Category</h2>
        </div>
    </div>
</div>
<div class="card-body p-4">
    <form method="post">

        <input asp-for="CategoryID" hidden />

        <div class="border p-3 mt-4">
            <div class="py-2 col-12">
                <label asp-for="CategoryName" class="ms-2"></label>
                <input asp-for="CategoryName" disabled class="form-control border-0" />
            </div>

            <div class="row mt-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">
                        Back to the list
                    </a>
                </div>
            </div>

        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
